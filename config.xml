<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nsdc.smartassessor" version="1.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SDMS Assessor</name>
    <description>
        Assessor app for assesssment
    </description>
    <author email="sanjay@spintadigital.com" href="http://cordova.io">
        Spinta digital
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <access launch-external="yes" origin="tel:*" />
    <access launch-external="yes" origin="mailto:*" />
    <icon src="res/icon.png" />
